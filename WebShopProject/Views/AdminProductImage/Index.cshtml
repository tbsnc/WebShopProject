@model IEnumerable<WebShopProject.Models.ProductImage>

@{
    ViewData["Title"] = "Index";
}
 <div class="row text-center">
    <h1>Product images</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Main image
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="align-middle">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMainImage)
            </td>
            <td>
                <img src="@item.FileName" height="50" width="50"/>
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="row mt-2">
    <div class="d-inline-flex">
        <a class="btn btn-success" asp-action="Create" asp-route-id="@ViewBag.ProductId">Create New</a>
        <a class="btn btn-dark ms-2" asp-controller="AdminProduct" asp-action="Edit" asp-route-id="@ViewBag.ProductId">Back to edit</a>
    </div>
</div>

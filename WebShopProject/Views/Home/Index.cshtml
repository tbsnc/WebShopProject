@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Product List</h1>

<div class="row mt-3">
    @foreach(var item in Model)
    {
        <div class="col-sm-4 mb-5" > 
            <div class="card">
                @if(item.ProductImage == null)
                {
                    <img src="~/images/default.png" height="100" />
                }
                else
                {
                    <img src="@item.ProductImage.FirstOrDefault(x => x.IsMainImage == true).FileName" height="100" />
                }
           
            <div class="card-body">
                <div class="card-title">@item.Name</div>
                <p class="card-text"> @item.Description</p>
                <table class="table  table-hover">
                    <thead>
                        <tr>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td >@item.Price €</td> 
                        <td class="position-relative">
                            
                            <form method="post"  class="position-absolute end-0 top-50 translate-middle-y" asp-controller="Cart" asp-action="AddToCart">
                                <input type="hidden" name="productId" value="@item.Id">
                                <input type="submit" class="btn btn-success btn-sm" value="Add to cart">
                            </form>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    }
</div>